{
  "name": "visual-graphql",
  "private": false,
  "version": "1.0.0",
  "description": "A lightweight GraphQL schema visualization tool built with SolidJS",
  "license": "MIT",
  "type": "module",
  "author": "Flavio Scimeca",
  "homepage": "https://github.com/FlavioScimeca/visual-graphql",
  "repository": {
    "type": "git",
    "url": "https://github.com/FlavioScimeca/visual-graphql"
  },
  "keywords": [
    "graphql",
    "schema",
    "visualization",
    "voyager",
    "solidjs",
    "introspection"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx",
    "build:lib": "vite build --config vite.lib.config.ts",
    "prepublishOnly": "npm run build:lib"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./styles": "./dist/visual-graphql.css"
  },
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@types/node": "^22.15.17",
    "graphql": "^16.9.0",
    "solid-js": "^1.9.5",
    "svg-pan-zoom": "^3.6.2",
    "ts-graphviz": "^2.1.6"
  },
  "peerDependencies": {
    "graphql": ">=16.0.0"
  },
  "devDependencies": {
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-solid": "^2.11.6",
    "vite-plugin-dts": "^3.7.2",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-solid": "^0.13.1",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1"
  }
}
